#!/bin/sh

color=`tput setaf 1 && tput bold`
end=`tput sgr0`

if [ -z $1 ]; then
  echo "Usage: `basename $0` <pod name>"
  exit 1
fi

pods="$(oc get pods -o name | grep $1)"
n=`echo "$pods" | wc -l`
if [ "$pods" == "" ]; then
  echo ${color}Pod name \"$1\" not found${end}
  exit 0
fi
if [ $n -eq 1 ]; then
  echo $pods | xargs oc delete
else
  echo ${color}Pod name \"$1\" is ambiguous:${end}
  echo "$pods"
fi
